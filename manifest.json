{
  "manifest_version": 2,

  "name": "Twit-it",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery.js", "twitit.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}